<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <label for="staff_email">Email address</label>
    <input type="email" value="" name="staff[email]" id="staff_email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" autofocus>
  </div>
  <div class="form-group">
    <label for="staff_password">Password</label>
    <input autocomplete="off" type="password" name="staff[password]" id="staff_password" class="form-control" placeholder="Password" >
  </div>
  <button type="submit" class="btn btn-success btn-gradient btn-block waves-effect waves-light">
    <i class="fa fa-key"></i>
    Login
  </button>
  <hr>
<% end %>
