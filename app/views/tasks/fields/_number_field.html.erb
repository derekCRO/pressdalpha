<div class="row">
<div class="col-sm-4 col-xs-9">
<label for="checkout-ln"><%= field.name %><%= if field.required then '*' else '' end %></label>
</div>

<div class="col-sm-8 col-xs-3">
      <div class="input-group number-spinner col-md-5">
         <span class="input-group-btn btnplusminus2">
             <a class="btn btn-color btnplusminus" data-dir="dwn"><i class="hc-remove"></i></a>
         </span>
         <%= f.number_field "#{field.category_id}[#{field.id}]", :class => 'form-control text-center', :value=> 1, :min=> 0, :max=> 99, :step=> 0, :required=>field.required %>
         <span class="input-group-btn btnplusminus2">
             <a class="btn btn-color btnplusminus" data-dir="up"><i class="hc-add"></i></a>
         </span>
     </div>
</div>
</div>
