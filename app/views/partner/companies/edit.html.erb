<h1> </h1>
<div class="row wrapper border-bottom white-bg page-heading">
      <div class="col-lg-10">
          <h2>Partners</h2>
      </div>
      <div class="col-lg-2">

      </div>
</div>

<div class="wrapper wrapper-content">
       	<div class="row">
       	<% @company.errors.full_messages.each do |msg| %>
			    <li class="error msg"><%= msg %></li>
		    <% end %>
				<!--Left Side Start-->
				<div class="col-md-4">
					<div class="ibox float-e-margins">
						<div class="ibox-title">
							<h5>Company Detail</h5>
						</div>
						<div>
							<div class="ibox-content no-padding border-left-right pt-20 pl-20">
								<!--<img alt="image" class="img-responsive" src="/assets/logo/1.png">!-->
								 <%= image_tag @company.image.url(:small), :class => 'img-responsive' %>
							</div>
							<div class="ibox-content profile-content">
								<h4><strong><%= @company.company_name %></strong></h4>
								<p><i class="fa fa-map-marker"></i><%= @company.location %></p>
								<p><i class="fa fa-envelop"></i><%= @company.email %></p>
                                <h5>Services</h5>
								<p>Garden Cleaning</p>
                                <p>House Cleaning</p>
								<h5>
								About Company
								</h5>
								<p>
								<%= @company.about_company %>
								</p>
								
								<div class="user-button">
									<div class="row">
										
										
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-8">
		           <div class="ibox float-e-margins">
		               <div class="ibox-title">
		                   <h5>Edit Partners </h5>
		                   <div class="ibox-tools">
		                       <a class="collapse-link">
		                           <i class="fa fa-chevron-up"></i>
		                       </a>
		                       
		                       
		                   </div>
		               </div>
		               <div class="ibox-content">
		                   <div class="row">
		                       <div class="col-sm-12 b-r">
		                       	  <%= render 'formedit', company: @company %>
		                           
		                       </div>
		                   </div>
		               </div>
				   </div>
				</div>
				<!--Left Side End-->
       </div>
</div>
