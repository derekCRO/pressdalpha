<%= form_for(@company, :url => '/admin/companies/', :html => {:class => 'form-horizontal', :multipart => true}) do |f| %>  
  
    <%= f.fields_for :user do |build| %>
	    <input type="hidden" value="Partner" name="company[user_attributes][user_type]" id="company_user_attributes_user_type">
	    <div class="form-group"><label class="col-sm-2 control-label" for="first_name">First Name</label>
		<div class="col-sm-10"><%= build.text_field :first_name, :class => 'form-control', :required => 'required' %></div>
	    </div>

	    <div class="form-group"><label class="col-sm-2 control-label" for="last_name">Last Name</label>
		<div class="col-sm-10"><%= build.text_field :last_name, :class => 'form-control', :required => 'required' %></div>
	    </div>
	   
	    <div class="form-group"><label class="col-sm-2 control-label" for="email">Email</label>
		 <div class="col-sm-10"><%= build.text_field :email, :class => 'form-control', :required => 'required' %></div>
	    </div>
	    
	    
	    <div class="form-group"><label class="col-sm-2 control-label" for="email">Password</label>
		 <div class="col-sm-10"><%= build.text_field :password, :class => 'form-control', :required => 'required' %></div>
	    </div>
		
	    <div class="form-group"><label class="col-sm-2 control-label" for="email">Confirm Password</label>
		 <div class="col-sm-10"><%= build.text_field :password_confirmation, :class => 'form-control', :required => 'required' %></div>
	    </div>
    <% end %> 
    
    
    </hr>

    <div class="form-group"><label class="col-sm-2 control-label" for="company_name">Company Name</label>
    <div class="col-sm-10"><%= f.text_field :company_name, :class => 'form-control', :required => 'required' %></div>
    </div>

    <div class="form-group"><label class="col-sm-2 control-label" for="image">Logo</label>
    <div class="col-sm-10"><%= f.file_field :image, :class => 'form-control', :required => 'required' %></div>
    </div>

    <div class="form-group"><label class="col-sm-2 control-label" for="about_company">About Company</label>
    <div class="col-sm-10"><%= f.text_area :about_company, :class => 'form-control', :required => 'required' %></div>
    </div>

    <div class="form-group"><label class="col-sm-2 control-label" for="location">Location</label>
    <div class="col-sm-10"><%= f.text_field :location, :class => 'form-control', :required => 'required' %></div>
    </div>
  
    <div class="form-group"><label class="col-sm-2 control-label" for="company_is_active">Status</label>
      <div class="col-sm-10">
      <select name="company[is_active]" required id="company_is_active" class="form-control">
        <option value="1">Active</option>
        <option value="0">Inactive</option>
      </select>
      </div>
    </div>
  
  <div class="hr-line-dashed"></div>
  
    <div class="form-group">
     <div class="col-sm-4 col-sm-offset-2">
         <button class="btn btn-primary" type="submit" name="commit" value="create" data-disable-with="Save">Save</button>
         <%= link_to 'Back', admin_companies_path, :class=>'btn btn-white' %>
     </div>
    </div>
<% end %>


