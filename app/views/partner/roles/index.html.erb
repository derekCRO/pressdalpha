<div class="page-heading">
            <h3>
                Roles
            </h3>
            <ul class="breadcrumb">
                
            </ul>
			<p id="notice"><%= notice %></p>
</div>
<div class="wrapper">
        <div class="row">
			<div class="col-sm-12">
				<section class="panel">
					<header class="panel-heading">
						<%= 'Roles' %>
					</header>
					<div class="panel-body">
						<table class="table table-bordered table-striped table-condensed">
						  <thead>
						  <tr>
								  <th>Id</th>
								  <th>Name</th>
								  <th>Is active</th>
								  <th colspan="1">Action</th>
						  </tr>
						  </thead>
						  
						<tbody>	
						<% @roles.each do |role| %>
						<tr>
						    <td><%= role.id %></td>
							<td><%= role.name %></td>
							<td><%= role.is_active %></td>
														
							
						  <td><%= link_to 'Edit', edit_admin_role_path(role) %> | <%= link_to 'Destroy', admin_role_path(role), data: { confirm: 'Are you sure?' }, :method => :delete %></td>
						</tr>
						<% end %>
						<tbody>
						</table>

						<br />

						
					</div>
				</section>
			</div>
		</div>
</div>

