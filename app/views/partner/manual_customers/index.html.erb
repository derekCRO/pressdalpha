<main class="main-content p-5" role="main">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/partner">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Manual Customers</li>
      </ol>
      <div class="row">
        <div class="col-md-6">
          <h1>&nbsp; Manual Customers</h1>
            <h5>Please note, all the customers on this page are manual customers added by yourself as a partner. This list does not include customers who have booked through the pressd platform.</h5>
        </div>
        <div class="col-md-6"><%= link_to 'Add Customer', new_partner_manual_customer_path, data: {toggle: "modal", target: "#modal-window"}, remote: true, class: 'btn btn-success waves-effect waves-light float-right' %>
  <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content"></div>
    </div>
  </div>
</div>
      </div>
      <br>
    </div>
    <div class="col-md-12">
      <div class="card">
        <div class="card-body product-page">
          <div class="tab-content" id="JobsTabContent">
						<div class="tab-pane fade show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
            <div class="table-responsive">
              <table class="table table-striped dataTables-example" style="100%">
                <thead>
                  <tr>
                    <th>Customer ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Address 1</th>
                    <th>Address 2</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Postcode</th>
                    <th>View Customer Profile</th>
                    <th>Edit Customer</th>
                    <th>Delete Customer</th>
                  </tr>
                </thead>
                <tbody>
                  <% if @manual_customers.length > 0  %>
                    <% @manual_customers.each do |manual_customers| %>
                      <tr>
                        <td><%= manual_customers.id %></td>
                        <td><%= manual_customers.first_name %></td>
                        <td><%= manual_customers.last_name %></td>
                        <td><%= manual_customers.email %></td>
                        <td><%= manual_customers.phone %></td>
                        <td><%= manual_customers.address1 %></td>
                        <td><%= manual_customers.address2 %></td>
                        <td><%= manual_customers.city %></td>
                        <td><%= manual_customers.country %></td>
                        <td><%= manual_customers.zipcode %></td>
                        <td><%= link_to 'View',partner_manual_customers_details_path(manual_customers), data: {toggle: "modal", target: "#modal-window"}, remote: true, class: 'btn btn-success waves-effect waves-light' %>
                        <td><%= link_to 'Edit',edit_partner_manual_customer_path(manual_customers), data: {toggle: "modal", target: "#modal-window"}, remote: true, class: 'btn btn-success waves-effect waves-light' %>
                        <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content"></div>
                          </div>
                        </div></td>
                        <td><%= link_to 'Delete', partner_manual_customer_path(manual_customers), method: :delete, data: { confirm: 'Are you sure?' },:class=>'btn btn-danger waves-effect waves-light' %></td>
                      </tr>
                    <% end %>
                  </tbody>
                  <% else %>
                    <tbody>
                      <tr></tr>
                    </tbody>
                  <% end %>
                </table>
              </div>
            </div>
						</div>
          </div>
        </div>
      </div>

      <script type="text/javascript">

        $(function () {

          $('.dataTables-example').DataTable({
            pageLength: 25,
            orderable: true,
            rowReorder: {
              selector: 'td:first-child'
            },
            responsive: true,
            dom: '<"html5buttons"B>lTfgitp',
            buttons: [
              {
                extend: 'copy'
              }, {
                extend: 'csv',
                title: 'Selected Customers'
              }, {
                extend: 'excel',
                title: 'Selected Customers'
              }, {
                extend: 'pdf',
                title: 'Selected Customers'
              }, {
                extend: 'print'
              }
            ]

          });

        });
      </script>
    </main>
