<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">New Customer</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">Ã—</span>
  </button>
</div>
<div class="modal-body">
  <%= simple_form_for(@manual_customer, :url => '/partner/manual_customers/', html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>
  <%= f.input :first_name, class: 'span1', label: 'First Name', error: ' is mandatory, please specify one', wrapper_html: { class: 'halflineformleft' } %>
  <%= f.input :last_name, class: 'span1', label: 'Last Name', error: ' is mandatory, please specify one', wrapper_html: { class: 'halflineformright' } %>
  <%= f.input :email, label: 'Email', error: ' is mandatory, please specify one' %>
  <%= f.input :phone, label: 'Phone', error: ' is mandatory, please specify one' %>
  <%= f.input :address1, label: 'Address Line 1', error: ' is mandatory, please specify one' %>
  <%= f.input :address2, label: 'Address Line 2', error: ' is mandatory, please specify one', wrapper_html: { class: 'halflineformleft' } %>
  <%= f.input :city, label: 'City', error: ' is mandatory, please specify one', wrapper_html: { class: 'halflineformright' } %>
  <%= f.input :country, label: 'Country', error: ' is mandatory, please specify one', wrapper_html: { class: 'halflineformleft' } %>
  <%= f.input :zipcode, label: 'Postcode', error: ' is mandatory, please specify one', wrapper_html: { class: 'halflineformright' } %>
  <%= f.input :notes, label: 'Notes', error: ' is mandatory, please specify one' %>
  <%= f.button :submit, "Add Customer",:class => "btn btn-success waves-effect waves-light" %>
  <% end %>
</div>
<div class="modal-footer">
</div>
