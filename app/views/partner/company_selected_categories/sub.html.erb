<main class="main-content p-5" role="main">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/partner">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/partner/company_selected_categories/selected_category">Selected Categories</a></li>
        <li class="breadcrumb-item active">Categories Options for <%= @category.name %></li>
      </ol>
      <div class="row">
        <div class="col-md-12">
          <h1>&nbsp; Categories Options for <%= @category.name %></h1>
          <br>
        </div>
      </div>
      <br>
    </div>
    <div class="col-md-12">
      <div class="card">
        <div class="card-body product-page">
          <div class="tab-content" id="JobsTabContent">
						<div class="tab-pane fade show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
              <div class="table-responsive">
         <table class="table table-striped dataTables-example" style="width:100%;">
           <thead>
                   <tr>
                     <th>ID</th>
                     <th>Name</th>
                     <th>Action</th>
                   </tr>
                 </thead>
                 <tbody>
                   <tbody>
                  <% if @categories.length > 0  %>
                       <% @categories.each do |category| %>
                        <tr>
                          <td><%= category.id %></td>
                          <td><%= category.name %></td>
                          <td><%= link_to(raw('Edit <i class="fa fa-pencil"></i>'), partner_subedit_category_path(category.id,@category, company_id: params[:company_id] ), { :class=>"btn btn-success waves-effect waves-light", "data-turbolinks"=>"false" }) %></td>
                          </tr>
                 <% end %>
                 </tbody>
             <% else %>
             	<tbody>
                <tr>
             		<td></td>
             	</tr>
              </tbody>
             <% end %>
       </table>
      </div>
            </div>
						</div>
          </div>
        </div>
      </div>

      <script type="text/javascript">

              $(function () {

                $('.dataTables-example').DataTable({
                  pageLength: 25,
                  orderable: true,
                  rowReorder: {
                    selector: 'td:first-child'
                  },
                  responsive: true,
                  dom: '<"html5buttons"B>lTfgitp',
                  buttons: [
                    {
                      extend: 'copy'
                    }, {
                      extend: 'csv',
                      title: 'Selected Customers'
                    }, {
                      extend: 'excel',
                      title: 'Selected Customers'
                    }, {
                      extend: 'pdf',
                      title: 'Selected Customers'
                    }, {
                      extend: 'print'
                    }
                  ]

                });

              });
            </script>

    </main>
