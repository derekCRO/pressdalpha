<div class="col-md-12">
	<div><br></div>
	<div class="table-responsive">
		<table class="table table-striped dataTables-example1 display nowrap" style="width:100%">
			<thead>
				<tr>
					<th>Job Id</th>
					<th>Category</th>
					<th>Price</th>
					<th>Date of Booking</th>
					<th>Date/Time of Service</th>
					<th>Service Address</th>
					<th>Customer Name</th>
					<th>Job Status</th>
					<th>Assign Staff</th>
					<th>Job Details</th>
					<th>Reject Job</th>
				</tr>
			</thead>
			<tbody>
				<% if @taskspending.length > 0  %>
					<% @taskspending.each do |tasks| %>
						<tr>
							<td><%= tasks.id %></td>
							<td>
								<%= tasks.category.name.titleize %>
							</td>
							<td>Â£<%= tasks.price %></td>
							<td><%= tasks.created_at.strftime("%e %B %Y ") %></td>
							<td>
								<%= "#{tasks.booking_date.strftime("%e %B %Y ")} - #{tasks.booking_time}" %>
							</td>
							<td><%= tasks.address1.titleize %>,
								<%= tasks.zipcode %></td>
							<td>
								<%= tasks.user.first_name.titleize %>
								<%= tasks.user.last_name.titleize %>
							</td>
							<td><%= tasks.status.titleize %></td>
							<td>
								<% if(tasks.status=='booking_made') %>
									<%= link_to 'Assign Staff', partner_jobs_add_staff_path(tasks), data: {toggle: "modal", target: "#modal-window"}, remote: true, class: 'btn btn-success waves-effect waves-light' %>
								<% end %>
							</td>
							<td>
								<%= link_to 'View Details', partner_jobs_details_path(tasks), data: {toggle: "modal", target: "#modal-window"}, remote: true, class: 'btn btn-success waves-effect waves-light' %>
								<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
									<div class="modal-dialog" role="document">
										<div class="modal-content"></div>
									</div>
								</div>
							</td>
							<td>
								<%= link_to 'Reject Job', partner_jobs_details_path(tasks), data: {toggle: "modal", target: "#modal-window"}, remote: true, class: 'btn btn-danger waves-effect waves-light' %>
								<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
									<div class="modal-dialog" role="document">
										<div class="modal-content"></div>
									</div>
								</div>
							</td>
						</tr>
					<% end %>
				<% else %>
					<tr>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
