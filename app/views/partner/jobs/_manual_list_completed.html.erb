<div class="col-md-12">
	<div><br></div>
	<div class="table-responsive">
		<table class="table table-striped dataTables-example3 display nowrap" style="width:100%">
			<thead>
				<tr>
					<th>Job Id</th>
					<th>Category</th>
					<th>Price</th>
					<th>Date of Booking</th>
					<th>Date/Time of Service</th>
					<th>Service Address</th>
					<th>Customer Name</th>
					<th>Job Status</th>
					<th>Job Details</th>
				</tr>
			</thead>
			<tbody>
				<% if @taskscompleted.length > 0  %>
					<% @taskscompleted.each do |tasks| %>
						<tr>
							<td><%= tasks.id %></td>
							<td><%= tasks.category.name.titleize %></td>
							<td>Â£<%= tasks.price.to_f %></td>
							<td><%= tasks.created_at.strftime("%e %B %Y ") %></td>
							<td><%= "#{tasks.booking_date.strftime("%e %B %Y ")} - #{tasks.booking_time}" %></td>
							<td><%= tasks.address1.titleize %>, <%= tasks.zipcode %></td>
							<td><%#= tasks.manual_customer.first_name.titleize %> <%#= tasks.manual_customer.last_name.titleize %></td>
							<td><%= tasks.status.titleize %></td>
							<td><%= link_to 'View Details', partner_jobs_manualdetails_path(tasks), data: {toggle: "modal", target: "#modal-window"}, remote: true, class: 'btn btn-success waves-effect waves-light' %>
							</td>
						</tr>
					<% end %>
				</tbody>
			<% else %>
				<tbody>
					<tr></tr>
				</tbody>
			<% end %>
		</table>
	</div>
</div>
