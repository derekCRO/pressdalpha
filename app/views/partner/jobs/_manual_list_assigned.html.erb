<div class="col-md-12">
	<div><br></div>
	<div class="table-responsive">
		<table class="table table-striped dataTables-example2 display nowrap" style="width:100%">
			<thead>
				<tr>
					<th>Job Id</th>
					<th>Category</th>
					<th>Price</th>
					<th>Date of Booking</th>
					<th>Date/Time of Service</th>
					<th>Service Address</th>
					<th>Customer Name</th>
					<th>Assigned Staff Name</th>
					<th>Job Status</th>
					<th>Change Staff</th>
					<th>Job Details</th>
					<th>Delete Job</th>
				</tr>
			</thead>
			<tbody>
				<% if @tasksassigned.length > 0  %>
					<% @tasksassigned.each do |tasks| %>
						<tr>
							<td><%= tasks.id %></td>
							<td>
								<%= tasks.category.name %>
								</td>
								<td>Â£<%= tasks.price.to_f %></td>
								<td><%= tasks.created_at.strftime("%e %B %Y ") %></td>
								<td><%= "#{tasks.booking_date.strftime("%e %B %Y ")} - #{tasks.booking_time}" %></td>
								<td><%= tasks.address1.titleize %>, <%= tasks.zipcode %></td>
								<td><%= tasks.user.first_name.titleize %> <%= tasks.user.last_name.titleize %></td>
								<td><%= image_tag tasks.staff.image.url(:thumb), :class => 'img-circle' %> <%= tasks.staff.first_name.titleize %> <%= tasks.staff.last_name.titleize %></td>
								<td><%= tasks.status.titleize %></td>
								<td><%= link_to 'Change Staff', partner_jobs_add_staff_path(tasks), data: {toggle: "modal", target: "#modal-window"}, remote: true, class: 'btn btn-success waves-effect waves-light' %></td>
								<td><%= link_to 'View Details', partner_jobs_manualdetails_path(tasks), data: {toggle: "modal", target: "#modal-window"}, remote: true, class: 'btn btn-success waves-effect waves-light' %>
								</td>
								<td><%= link_to 'Delete Job', partner_jobs_manualdetails_path(tasks), data: {toggle: "modal", target: "#modal-window"}, remote: true, class: 'btn btn-success waves-effect waves-light' %>
								</td>
							</tr>
						<% end %>
					</tbody>
				<% else %>
					<tbody>
						<tr></tr>
					</tbody>
				<% end %>
			</table>
		</div>
	</div>
