<div class="side-one">
  <!-- sideBar -->
  <div class="row sideBar" id="conversations-list">
    <table class="table table-hover">

      <% @conversations.each do |conversation| %>
        <div class="sideBar-body" data-conversation-id=<%= conversation.id %>>
          <tbody>
            <div class="">
              <tr class="">
                <td class="email-checkbox">
                  <div class="profile-picture">
                    <%= link_to partner_conversations_path(recipient_id: conversation.recipient_id), method: :post, remote: true, class: "user-item" do %>
                    <%= image_tag conversation.recipient.image.url(:thumb) %>
                  <% end %>
                </div>
              </div>
            </td>
            <td class=""><%= link_to partner_conversations_path(user_id: conversation.sender_id), method: :post, remote: true, class: "user-item" do %><%= conversation.user.first_name %>
            <% end %>
          </td>
          <td class=""><%= link_to partner_conversations_path(user_id: conversation.sender_id), method: :post, remote: true, class: "user-item" do %><%= l conversation.created_at, format: :short %>
          <% end %>
        </td>
      </tbody>
    </div>
  <% end %>

</table>
</div>
<!-- Sidebar End -->
</div>
