<li class="media">
  <%= link_to staff_jobs_list_path, class: "waves-effect waves-light dropdown-item #{"unread" if !notification.read_at?}" do %>
    <i class="fa fa-bell fapadding"></i>
    <div class="media-body">
      <h6 class="mt-0 mb-1 notification-heading">New Jobs Assigned</h6>
      <div class="notification-text">
        You have new jobs assigned in your bookings list. Click here to go check them out.
      </div>
      <span class="notification-time"><%= notification.created_at.strftime("%b %e, %l:%M %p") %></span>
    </div>
<% end %>
</li>
