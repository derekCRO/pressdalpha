<!doctype html>
<html lang="en">
  <head>
    <title>Pressd</title>
    <%= csrf_meta_tags %>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content='<%= customer_signed_in? ? current_customer.id : "" %>' name='user-id'/>

    <!-- Bootstrap CSS -->
    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"> -->

    <% if content_for?(:head) %>
      <%= yield(:head) %>
    <% end %>


    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'custom' %>
    <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
    <script type="text/javascript" src="https://js.stripe.com/v3/"></script>
    <%= javascript_include_tag 'modernizr.min' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'charges' %>
    <%= yield(:head) %>

    <%= tag :meta, name: "stripe-public-key", content: Rails.application.secrets.stripe_public_key %>
  </head>

  <body>
  	  <%= render :partial => 'layouts/frontheader' %>
  		<%= yield %>
  	  <%= render :partial => 'layouts/frontfooter' %>
      <%= javascript_include_tag 'bundle' %>
      <%= javascript_include_tag 'main' %>
      </div>
  </body>

</html>
