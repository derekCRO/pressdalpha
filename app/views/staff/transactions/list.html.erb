<p id="notice"><%= notice %></p>

<h1>Transaction</h1>

<div class="row">

<div class="col-lg-12">
  <div class="ibox float-e-margins">
     <div class="ibox-title">
      <h5>All Transactions </h5>
      <div class="ibox-tools">
       <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
       </a> 
      </div>
     </div>
     <div class="ibox-content">
      <div class="row">
       
       
      </div>
      <div class="table-responsive">
       <table class="table table-hover">
           <tbody>
           <% if @transactions.length > 0  %>
                <% @transactions.each do |tasks| %>
                     <tr>
                         <td class="project-title">
                             <a href="#"><%= tasks.transaction_id %></a>
                             <br>
                             <small>Transaction Id</small>
                         </td>
                         <td class="project-title" >
                             <h2 class="text-navy m-0 font-weight-bold" style="padding: 0px;line-height: 1px; margin-bottom: 5px; margin-top: 15px;">$<%= tasks.total_amount %></h2>
                             <small>Paid Amount</small>
                         </td>
                         <td class="project-title" >
                             <h2 class="text-navy m-0 font-weight-bold" style="padding: 0px;line-height: 1px; margin-bottom: 5px; margin-top: 15px;">$<%= tasks.admin_amount %></h2>
                             <small>Transaction fee</small>
                         </td>
                         <td class="project-title" >
                             <h2 class="text-navy m-0 font-weight-bold" style="padding: 0px;line-height: 1px; margin-bottom: 5px; margin-top: 15px;">$<%= tasks.company_amount %></h2>
                             <small>Your Amount</small>
                         </td>
                         <td class="project-title">
                             <%= tasks.date.strftime('%d %b,%Y') %>
                             <br>
                             <small>Paid Date</small>
                         </td>
                         
                         <td class="project-completion">
                                 <small>Booiking Id  <a href="#"><%= tasks.job.view_job_id %></a></small>
                                 <br>
                                 <small>Booked for <%= tasks.job.booking_date %> - <%= tasks.job.booking_time %></small>
                                 <br>
                                 <small>Location: <%= tasks.job.address %>, <%= tasks.job.zipcode %></small>
                         </td>
                         <td class="project-people">
                             <%= image_tag tasks.customer.image.url(:thumb), :class => 'img-circle' %>
                             <%= tasks.customer.first_name %> <%= tasks.customer.last_name %>
                         </td>
                         <td class="project-people">
                             <%= image_tag tasks.company.image.url(:thumb), :class => 'img-circle' %>
                             <%= tasks.company.company_name %>
                         </td>
                        
                     </tr>
                <% end %>
           <% else %>
           	<tr>
           		<td colspan="5"> No Bookings Found. </td>
           	</tr>
           <% end %>
           
           
           </tbody>
       </table>
       
       
      </div>

     </div>
  </div>
</div>
</div>

<br>


