<p id="notice"><%= notice %></p>

<h1>Staff</h1>

<div class="row">

<div class="col-lg-12">
  <div class="ibox float-e-margins">
     <div class="ibox-title">
      <h5>Staff Lists </h5>
      <div class="ibox-tools">
       <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
       </a>
      </div>
     </div>
     <div class="ibox-content">
      <div class="row">


      </div>
      <div class="table-responsive">
       <table class="table table-striped">
        <thead>
        <tr>
            <th>Sl No</th>
            <th>Image</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Email </th>
            <th>Phone no</th>
            <th>Address</th>
            <th>Date</th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
        <tr>
            <!--<td class="client-avatar"><img alt="image" src="img/a8.jpg"> </td>!-->
            <td><%= user.id %></td>
            <td class="client-avatar"><%= image_tag user.image.url(:small) %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><i class="fa fa-envelope"></i>&nbsp;&nbsp;<%= user.email %></td>
            <td><i class="fa fa-phone"></i>&nbsp;&nbsp;<%= user.phone %></td>
            <td><%= user.address %></td>
            <td><%= user.created_at.strftime( "%d-%B, %Y" ) %></td>
            <td class="action">

                <%= link_to 'Edit', edit_staff_user_path(user), :class=>'btn btn-outline btn-default'%>
                <%= link_to 'Destroy', staff_user_path(user), method: :delete, data: { confirm: 'Are you sure?' },:class=>'btn btn-outline btn-default' %>
            </td>
        </tr>
        <% end %>
        </tbody>
       </table>
      </div>

     </div>
  </div>
</div>
</div>

<br>
