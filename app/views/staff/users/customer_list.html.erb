<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<div class="row">

<div class="col-lg-12">
  <div class="ibox float-e-margins">
     <div class="ibox-title">
      <h5>My Customer Lists </h5>
      <div class="ibox-tools">
       <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
       </a> 
      </div>
     </div>
     <div class="ibox-content">
      <div class="row">
       
       
      </div>
      <div class="table-responsive">
       <table class="table table-striped table-hover">
           <tbody>
           	<% if @users.length > 0  %>
		           <% @users.each do |tasks| %>
		                <tr>
				         <td class="client-avatar">
				         
				             <%= image_tag tasks.user.image.url(:thumb) %>
		                   </td>
				         <td><a><%= tasks.user.first_name %> <%= tasks.user.last_name %></a></td>
				         <td class="contact-type"><i class="fa fa-phone"> </i>
				         </td>
				         <td><%= tasks.user.phone %></td>
				         <td class="contact-type"><i class="fa fa-envelope"> </i>
				         </td>
				         <td><%= tasks.user.email %></td>
				         <td class="contact-type"><i class="fa fa-map-marker"> </i>
				         </td>
				         <td><%= tasks.user.address %></td>
				         <td><%= link_to "Send Message" ,"javascript:void(0)" , class: "btn btn-success btn-xs start-conversation", "data-sid" => current_partner.id, "data-rip" => tasks.user.id %></td>
				     </tr>
		                
		           <% end %>
		      <% else %>
		      	<tr>
		      		<td colspan="9"> No Customer Found. </td>
		      	</tr>
		      <% end %>
		      
		      
               


           </tbody>
       </table>
       
       
       
       
      </div>

     </div>
  </div>
</div>
</div>

<br>


