<div class="modal-header">
	<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<span aria-hidden="true">Ã—</span>
	</button>
</div>
<div class="modal-body">
	<%= form_for(@tasks, :url => partner_jobs_update_path(@tasks.id), :id => @tasks.id, :html => {:class => 'form-horizontal', :multipart => true, remote: true}) do |f| %>
	<input type="hidden" name="job[id]" value="<%= @tasks.id %>">
	<input type="hidden" name="job[status]" value="booking_confirmed">
	<div class="form-group">
		<label class="col-sm-2 control-label" for="email">Staff Name</label>
		<div class="col-sm-12">
			<%= f.select :staff_id, options_from_collection_for_select(@users, :id, :fullname), class: "form-control" %>
		</div>
		<button class="btn btn-success waves-effect waves-light float-right" type="submit" name="commit" value="Add Staff" data-disable-with="Update">Assign to Staff</button>
	<% end %>
</div>
</div>
<div class="modal-footer"></div>
