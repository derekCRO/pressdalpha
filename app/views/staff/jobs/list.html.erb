<main class="main-content p-5" role="main">
	<div class="row">
		<div class="col-md-12">
			<ol class="breadcrumb animated fadeInDown">
				<li class="breadcrumb-item">
					<a href="/staff">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Bookings</li>
			</ol>
			<div class="row animated fadeInDown">
				<div class="col-md-12">
					<h1>
						&nbsp; Bookings</h1>
				</div>
			</div>
			<button type="button" class="btn btn-primary" id="showtoast">Show Toast</button>
			<br>
		</div>
		<div class="col-md-12">
			<div class="card animated fadeInDown">
				<div class="card-body product-page">
					<ul class="nav nav-pills tabheadergroup" id="JobsTab" role="tablist">
						<li class="nav-item tabheadersingle1" style="width: 50%">
							<a class="nav-link tabtext active" id="assigned-tab" data-toggle="tab" href="#assigned" role="tab" aria-controls="assigned" aria-selected="true">Assigned Bookings</a>
						</li>
						<li class="nav-item tabheadersingle1" style="width: 50%">
							<a class="nav-link tabtext" id="completed-tab" data-toggle="tab" href="#completed" role="tab" aria-controls="completed" aria-selected="false">Completed Bookings</a>
						</li>
					</ul>
					<div class="tab-content" id="JobsTabContent">
						<div class="tab-pane fade show active" id="assigned" role="tabpanel" aria-labelledby="assigned-tab">
							<%= render 'list_assigned' %>
						</div>
						<div class="tab-pane fade" id="completed" role="tabpanel" aria-labelledby="completed-tab">
							<%= render 'list_completed' %>
						</div>
					</div>
				</div>
			</div>
		</div>

		<script type="text/javascript">

			$(function () {

				$('.dataTables-example1').DataTable({
					pageLength: 25,
					orderable: true,
					rowReorder: {
						selector: 'td:third-child(3)'
					},
					responsive: true,
					dom: '<"html5buttons"B>lTfgitp',
					buttons: [
						{
							extend: 'copy'
						}, {
							extend: 'csv',
							title: 'Selected Customers'
						}, {
							extend: 'excel',
							title: 'Selected Customers'
						}, {
							extend: 'pdf',
							title: 'Selected Customers'
						}, {
							extend: 'print'
						}
					]

				});

			});
		</script>

		<script type="text/javascript">

			$(function () {

				$('.dataTables-example2').DataTable({
					pageLength: 25,
					orderable: true,
					rowReorder: {
						selector: 'td:third-child(3)'
					},
					responsive: true,
					dom: '<"html5buttons"B>lTfgitp',
					buttons: [
						{
							extend: 'copy'
						}, {
							extend: 'csv',
							title: 'Selected Customers'
						}, {
							extend: 'excel',
							title: 'Selected Customers'
						}, {
							extend: 'pdf',
							title: 'Selected Customers'
						}, {
							extend: 'print'
						}
					]

				});

			});
		</script>

	</main>
