<%= stylesheet_link_tag 'admin/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css' %>
<h1>Editing Site Setting</h1>
<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-lg-10">
		<h2>Site Setting</h2>
		<ol class="breadcrumb">
		       
		</ol>
	</div>
	<div class="col-lg-2">

	</div>
</div>

<div class="wrapper wrapper-content">
    <div class="row animated fadeInRight">
    	
		
		<div class="col-md-4">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5>Company Detail</h5>
				</div>
				<div>
					<div class="ibox-content profile-content">
						<h4>Facebook Link&nbsp; :</h4>
						<p><%= @site_setting.facebook_link %></p>
                        <h4>Site Email &nbsp; :</h4>
						<p><%= @site_setting.site_email %></p>
                        <h4>Phone No&nbsp; :</h4>
						<p><%= @site_setting.phone_no %></p>
						<h4>Google Plus Link &nbsp; :</h4>
						<p><%= @site_setting.google_plus_link %></p>
						
						<div class="user-button">
							<div class="row">	
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	
		<div class="col-md-8">
               <div class="ibox float-e-margins">
                   <div class="ibox-title">
                       <h5>Update Your Site Settings Details</h5>
                       <div class="ibox-tools">
                           <a class="collapse-link">
                               <i class="fa fa-chevron-up"></i>
                           </a>
                           
                       </div>
                   </div>
                   <div class="ibox-content">
                   	   
                   	   <%= form_for(@site_setting, :url => admin_site_setting_path, :id => @site_setting.id,  :html => {:class => 'form-horizontal'}) do |f| %>	
		                      
		                      <div class="form-group"><label class="col-sm-2 control-label">Facebook Link</label>
		                       <div class="col-sm-10"><%= f.text_field :facebook_link, :class => 'form-control' %></div>
		                      </div>

		                      <div class="form-group"><label class="col-sm-2 control-label">Site Email</label>
		                       <div class="col-sm-10"><%= f.text_field :site_email, :class => 'form-control' %></div>
		                      </div>

		                      <div class="form-group"><label class="col-sm-2 control-label">Phone No</label>
		                       <div class="col-sm-10"><%= f.text_field :phone_no, :class => 'form-control' %></div>
		                      </div>

		                       <div class="form-group"><label class="col-sm-2 control-label">Google Plus Link</label>
		                       <div class="col-sm-10"><%= f.text_field :google_plus_link, :class => 'form-control' %></div>
		                      </div>
		                     
		                      <div class="hr-line-dashed"></div>
		                      
		                      <div class="form-group">
		                          <div class="col-sm-4 col-sm-offset-2">
		                              <!--<button class="btn btn-primary" type="submit">Save</button>
		                              <button class="btn btn-white" type="submit">Cancel</button>!-->

		                              <%= f.submit "Update", :class=>'btn btn-white' %>  
		                          </div>
		                      </div>
		                  <% end %>
                   </div>
                </div>
             </div>   
            
    	
    </div>
</div>

<%= javascript_include_tag "admin/js/select-dropdowm" %>

        <script>
            $(document).ready(function () {
                $('.i-checks').iCheck({
                    checkboxClass: 'icheckbox_square-green',
                    radioClass: 'iradio_square-green',
                });
            });
        </script>
        <script>
            $(function() {
                $('.multiselect-ui').multiselect({
                    includeSelectAllOption: true
                });
            });
        </script>
