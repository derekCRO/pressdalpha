<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Categories Options for <%= @category.name %></h2>

  </div>
  <div class="col-lg-2">

  </div>
</div>

<div class="wrapper wrapper-content">

  <div class="row">

    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>List of Categories </h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>


          </div>
        </div>
        <div class="ibox-content">

          <div class="project-list table-responsive">
            <div class="html5buttons">
              <div class="dt-buttons btn-group">

              </div>
            </div>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>id</th>
                  <th>Name</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% if @categories.empty? %>
                  <tr><td colspan="3">No Categories Options yet posted</td></tr>
                <% else %>
                  <% @count = 0 %>
                  <% @categories.each do |category| %>
                    <tr>
                      <td class="project-title"><%= @count += 1 %></td>
                      <td> <%= category.id %> </td>
                      <td class="project-title"><%= category.name %></td>
                      <td class="action">
                        <%= link_to(raw('Edit <i class="fa fa-pencil"></i>'), partner_subedit_category_path(category.id,@category), { :class=>"btn btn-outline btn-default", "data-turbolinks"=>"false" }) %>
                      </td>
                      
                    </tr>
                  <% end %>
                <% end %>

              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
