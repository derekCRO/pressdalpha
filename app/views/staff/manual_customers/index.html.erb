<p id="notice"><%= notice %></p>

<h1>Customer Management</h1>

<div class="row">

<div class="col-lg-12">
  <div class="ibox float-e-margins">
     <div class="ibox-title">
      <h5>Customer Management </h5>
      <div class="ibox-tools">
       <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
       </a>
      </div>
     </div>
     <div class="ibox-content">
      <div class="row">


      </div>
      <div class="table-responsive">
       <table class="table table-hover">
           <tbody>
                  <% if @manual_customers.each do |manual_customers| %>
                     <tr>
                         <td class="project-title">
                             <%= manual_customer.id %>
                             <br>
                             <small>ID</small>
                         </td>
                         <td class="project-title">
                             <%= manual_customer.first_name %>
                             <br>
                             <small>First Name</small>
                         </td>
                         <td class="project-title">
                             <%= manual_customer.last_name %>
                             <br>
                             <small>Last Name</small>
                         </td>
                         <td class="project-title">
                             <%= manual_customer.email %>
                             <br>
                             <small>Booking Id</small>
                         </td>
                         <td class="project-title">
                             <%= manual_customer.phone %>
                             <br>
                             <small>Booking Id</small>
                         </td>
                         <td class="project-title">
                             <%= manual_customer.address1 %>
                             <br>
                             <small>Booking Id</small>
                         </td>
                         <td class="project-title">
                             <%= manual_customer.address2 %>
                             <br>
                             <small>Booking Id</small>
                         </td>
                         <td class="project-title">
                             <%= manual_customer.city %>
                             <br>
                             <small>Booking Id</small>
                         </td>
                         <td class="project-title">
                             <%= manual_customer.country %>
                             <br>
                             <small>Booking Id</small>
                         </td>
                         <td class="project-title">
                             <%= manual_customer.zipcode %>
                             <br>
                             <small>Booking Id</small>
                         </td>
                     </tr>
                     <% end.empty? %>
                     <tr>
                        <td colspan="5"> No Customers Found. </td>
                      </tr>
                     <% end %>


           </tbody>
       </table>


      </div>

     </div>
  </div>
</div>
</div>
