<%= form_for(@content, :url => admin_content_path, :id => @content.id, :html => {:class => 'form-horizontal'}) do |f|  %>
        <div class="form-group"><label class="col-sm-2 control-label" for="page_heading">Heading</label>
	 	<div class="col-sm-10"><%= f.text_field :page_heading, :class => 'form-control', :required => 'required' %></div>
	    </div>

        <div class="form-group"><label class="col-sm-2 control-label" for="slug">Slug</label>
	 	<div class="col-sm-10"><%= f.text_field :slug, :class => 'form-control', :required => 'required' %></div>
	    </div>

        <div class="form-group"><label class="col-sm-2 control-label" for="page_description">Description</label>
	 	<div class="col-sm-10"><%= f.text_area :page_description, :class => 'form-control', :required => 'required' %></div>
	    </div>
	
		<div class="form-group"><label class="col-sm-2 control-label" for="content_is_active">Status</label>
		 	<div class="col-sm-10">
		 	<select name="content[is_active]" required id="content_is_active" class="form-control">
				<option value="1">Active</option>
				<option value="0">Inactive</option>
			</select>
			</div>
		</div>
	
	<div class="hr-line-dashed"></div>
  
	  <div class="form-group">
		 <div class="col-sm-4 col-sm-offset-2">
		     <button class="btn btn-primary" type="submit" name="commit" value="Update Category" data-disable-with="Update">Update</button>
		     <%= link_to 'Back', admin_contents_path, :class=>'btn btn-white' %>
		 </div>
	  </div>
	  
	
<% end %>
