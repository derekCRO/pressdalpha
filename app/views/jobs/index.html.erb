<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Task</th>
      <th>company</th>
      <th>Booking date</th>
      <th>Booking time</th>
      <th>Price</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.user_id %></td>
        <td><%= job.task_id %></td>
        <td><%= job.company_id %></td>
        <td><%= job.booking_date %></td>
        <td><%= job.booking_time %></td>
        <td><%= job.price %></td>
        <td><%= job.status %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

