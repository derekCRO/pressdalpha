<main class="main-content p-5" role="main">
	<div class="row">
		<div class="col-md-12">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/admin">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Enquiry Postcodes</li>
			</ol>
			<div class="row">
				<div class="col-md-12">
					<h1>
						&nbsp; Enquiry Postcodes</h1>
				</div>
			</div>
			<br>
		</div>
		<div class="col-md-12">
			<div class="card">
				<div class="card-body product-page">
					<div class="tab-content" id="JobsTabContent">
						<div class="tab-pane fade show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
							<div class="table-responsive">
								<table class="table table-striped dataTables-example display nowrap" style="width:100%">
									<thead>
										<tr>
                      <th>ID</th>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Postcode</th>
											<th>Service Type</th>
											<th>Inform Me?</th>
										</tr>
									</thead>
									<tbody>
										<% if @enquirypostcodes.length > 0  %>
											<% @enquirypostcodes.each do |enquirypostcode| %>
												<tr>
                        <td><%= enquirypostcode.id %></td>
                        <td><%= enquirypostcode.first_name %> <%= enquirypostcode.last_name %></td>
                        <td><%= enquirypostcode.email %></td>
                        <td><%= enquirypostcode.postcode %></td>
                        <td><%= enquirypostcode.service_type %></td>
                        <td><%= enquirypostcode.inform_me %></td>
												</tr>
											<% end %>
										</tbody>
									<% else %>
										<tbody>
											<tr></tr>
										</tbody>
									<% end %>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<script type="text/javascript">
			$(function () {

				$('.dataTables-example').DataTable({
					pageLength: 25,
					orderable: true,
					rowReorder: {
						selector: 'td:first-child'
					},
					responsive: true,
					dom: '<"html5buttons"B>lTfgitp',
					buttons: [
						{
							extend: 'copy'
						}, {
							extend: 'csv',
							title: 'Selected Customers'
						}, {
							extend: 'excel',
							title: 'Selected Customers'
						}, {
							extend: 'pdf',
							title: 'Selected Customers'
						}, {
							extend: 'print'
						}
					]

				});

			});
		</script>

	</main>
