<%= form_for(@category, :url => admin_category_path, :id => @category.id, :html => {:class => 'form-horizontal'}) do |f|  %>
<input type="hidden" name="category[category_id]" id="category_category_id" value="0">
	<div class="form-group"><label class="col-sm-2 control-label" for="category_name">Name</label>
	 	<div class="col-sm-10"><%= f.text_field :name, :class => 'form-control', :required => 'required' %></div>
	</div>

	<div class="form-group"><label class="col-sm-2 control-label" for="category_price_per_hour">Price p/h</label>
	 	<div class="col-sm-10 input-group m-b"><span class="input-group-addon">&euro;</span> <%= f.text_field :price_per_hour, :class => 'form-control', :required => 'required' %></div>
	</div>

	<div class="form-group"><label class="col-sm-2 control-label" for="image">Image</label>
	 	<div class="col-sm-10"><%= f.file_field :image, :class => 'form-control' %></div>
	</div>

	<div class="form-group"><label class="col-sm-2 control-label" for="category_is_active">Status</label>
	 	<div class="col-sm-10">
	 	<select name="category[is_active]" required id="category_is_active" class="form-control">
			<option value="1" <%= @category.is_active? ? 'selected':''%> >Active</option>
			<option value="0" <%= @category.is_active? ? '':'selected'%>>Inactive</option>
		</select>
		</div>
	</div>

	<div class="hr-line-dashed"></div>

	  <div class="form-group">
		 <div class="col-sm-12 col-sm-offset-2">
		     <button class="btn btn-primary" type="submit" name="commit" value="Update Category" data-disable-with="Update">Update</button>
		     <%= link_to 'Back', admin_categories_path, :class=>'btn btn-white' %>
		 </div>
	  </div>


<% end %>
