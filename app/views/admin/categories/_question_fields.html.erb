<div class="nested-fields">
	<div class="form-group"><label class="col-sm-2 control-label" for="category_name">Field Type</label>
	 	<div class="col-sm-10">

	 		<%= f.select :field_type,
						options_for_select(ANSWER_FIELD_TYPE, f.object.field_type),
                              {},{ :class=> "form-control"} %>
          </div>
	</div>

	<div class="form-group"><label class="col-sm-2 control-label" for="category_name">Field Name</label>
	 	<div class="col-sm-10"><%= f.text_field :name, :class => 'form-control' %></div>
	</div>

	<div id="options_<%=f.index%>">
		<%= f.fields_for :category_attribute_options do |category_attribute_option| %>
			<%= render 'category_attribute_option_fields', f: category_attribute_option %>
		<% end %>
		<div class="links">
	    <%= link_to_add_association "Add options for dropdown", f, :category_attribute_options, class: "btn btn-success btn-xs" %>
	  </div>
	</div>


	<div class="form-group"><label class="col-sm-2 control-label" for="category_name">Group Name</label>
	 	<div class="col-sm-10"><%= f.text_field :group_name, :class => 'form-control' %></div>
	</div>

	<div class="form-group"><label class="col-sm-2 control-label" for="category_name">Information</label>
		<div class="col-sm-10"><%= f.text_field :information, :class => 'form-control' %></div>
	</div>

	<div class="form-group"><label class="col-sm-2 control-label" for="category_name">Hour per item</label>
	 	<div class="col-sm-10"><%= f.number_field :hour_per_item, :class => 'form-control' %></div>
	</div>

	<div class="form-group"><label class="col-sm-2 control-label" for="category_name">Material Cost</label>
	 	<div class="col-sm-10"><%= f.number_field :material_cost, :class => 'form-control' %></div>
	</div>


	<div class="form-group"><label class="col-sm-2 control-label" for="category_name">Required</label>
	 	<div class="col-sm-10"><%= f.check_box :required, :class => 'form-control' %></div>
	</div>

	<%= f.hidden_field :_destroy %>

	<%= link_to_remove_association '[Remove]', f %>
</div>
