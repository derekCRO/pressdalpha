<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">Update <%= @company.company_name %> </h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">Ã—</span>
  </button>
</div>
<div class="modal-body">
  <%= form_for(@company, :url => admin_company_path, :id => @company.id, :html => {:class => 'form-horizontal', :multipart => true}) do |f|  %>
  <div class="form-group halflineformleft"><label class="col-sm-12 control-label" for="first_name">First Name</label>
      <div class="col-sm-12"><%= f.text_field :first_name, :class => 'form-control', :required => 'required' %></div>
      </div>

      <div class="form-group halflineformright"><label class="col-sm-12 control-label" for="last_name">Last Name</label>
      <div class="col-sm-12"><%= f.text_field :last_name, :class => 'form-control', :required => 'required' %></div>
      </div>

      <div class="form-group"><label class="col-sm-12 control-label" for="email">Email</label>
      <div class="col-sm-12"><%= f.text_field :email, :class => 'form-control', :required => 'required' %></div>
      </div>

      <div class="form-group"><label class="col-sm-12 control-label" for="company_name">Company Name</label>
      <div class="col-sm-12"><%= f.text_field :company_name, :class => 'form-control', :required => 'required' %></div>
      </div>

      <div class="form-group"><label class="col-sm-12 control-label" for="image">Logo</label>
      <div class="col-sm-12"><%= f.file_field :image, :class => 'form-control' %></div>
      </div>

      <div class="form-group"><label class="col-sm-12 control-label" for="about_company">About Company</label>
      <div class="col-sm-12"><%= f.text_area :about_company, :class => 'form-control', :required => 'required' %></div>
      </div>

      <div class="form-group halflineformleft"><label class="col-sm-12 control-label" for="location">Location</label>
      <div class="col-sm-12"><%= f.text_field :location, :class => 'form-control', :required => 'required' %></div>
      </div>

      <div class="form-group halflineformright"><label class="col-sm-12 control-label" for="location">Postcode</label>
      <div class="col-sm-12"><%= f.text_field :zipcode, :class => 'form-control', :required => 'required' %></div>
      </div>

      <div class="form-group"><label class="col-sm-12 control-label" for="company_is_active">Status</label>
        <div class="col-sm-12">
        <select name="company[is_active]" required id="company_is_active" class="form-control">
          <option value="1">Active</option>
          <option value="0">Inactive</option>
        </select>
        </div>
      </div>

  	<div class="hr-line-dashed"></div>

  	  <div class="form-group">
  		 <div class="col-sm-4 col-sm-offset-2">
  		     <button class="btn btn-success waves-effect waves-light float-right" type="submit" name="commit" value="Update Company" data-disable-with="Update">Update</button>
  		 </div>
  	  </div>


  <% end %>
</div>
<div class="modal-footer">
</div>
