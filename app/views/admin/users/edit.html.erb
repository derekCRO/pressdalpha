<h1> </h1>
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Customers</h2>

  </div>
  <div class="col-lg-2">

  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <% @user.errors.full_messages.each do |msg| %>
    <li class="error msg"><%= msg %></li>
    <% end %>
    <!--Left Side Start-->
    <div class="col-md-4">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>User Detail</h5>
        </div>
        <div>
          <div class="ibox-content no-padding border-left-right pt-20 pl-20">
            <!--<img alt="image" class="img-responsive" src="/assets/logo/1.png">!-->
            <%= image_tag @user.image.url(:small), :class => 'img-responsive' %>
          </div>
          <div class="ibox-content profile-content">
            <h4><strong><%= @user.first_name %>&nbsp;&nbsp;<%= @user.last_name %></strong></h4>
            <p><i class="fa fa-map-marker"></i><%= @user.address %></p>
            <p><i class="fa fa-envelop"></i><%= @user.email %></p>
            <div class="user-button">
              <div class="row">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Edit Customers </h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-12 b-r">
              <%= render 'formedit', user: @user %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--Left Side End-->
  </div>
</div>
