<main class="main-content p-5" role="main">
	<div class="row">
		<div class="col-md-12">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/admin">Dashboard</a>
				</li>
				<li class="breadcrumb-item"><a href="/admin/conversations">Conversations</a></li>
				<li class="breadcrumb-item active">Messages for <%= @conversation.id %></li>
			</ol>
			<div class="row">
				<div class="col-md-12">
					<h1>
						&nbsp; Messages for <%= @conversation.id %></h1>
				</div>
			</div>
			<br>
		</div>
		<div class="col-md-12">
			<div class="card">
				<div class="card-body product-page">
					<div class="tab-content" id="JobsTabContent">
						<div class="tab-pane fade show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
							<div class="table-responsive">
								<table class="table table-striped dataTables-example display nowrap" style="width:100%">
									<thead>
										<tr>
                      <th>User ID</th>
                      <th>Body</th>
                      <th>Last Updated at</th>
											<th>Image</th>
										</tr>
									</thead>
									<tbody>
										<% if @messages.length > 0  %>
											<% @messages.each do |message| %>
												<tr>
                        <td><%= message.user_id %></td>
                        <td><%= message.body %></td>
                        <td><%= message.updated_at %></td>
                        <td><%= image_tag message.image.url(:thumb), :class => 'profile-picture img' %></td>
												</tr>
											<% end %>
										</tbody>
									<% else %>
										<tbody>
											<tr></tr>
										</tbody>
									<% end %>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<script type="text/javascript">
			$(function () {

				$('.dataTables-example').DataTable({
					pageLength: 25,
					orderable: true,
					rowReorder: {
						selector: 'td:first-child'
					},
					responsive: true,
					dom: '<"html5buttons"B>lTfgitp',
					buttons: [
						{
							extend: 'copy'
						}, {
							extend: 'csv',
							title: 'Selected Customers'
						}, {
							extend: 'excel',
							title: 'Selected Customers'
						}, {
							extend: 'pdf',
							title: 'Selected Customers'
						}, {
							extend: 'print'
						}
					]

				});

			});
		</script>

	</main>
