<%= form_for(@video, :url => '/admin/videos/', :html => {:class => 'form-horizontal'}) do |f| %>	
	
        <div class="form-group"><label class="col-sm-2 control-label" for="video_video_type">Video Type</label>
		 	<div class="col-sm-10">
		 	<select name="video[video_type]" required id="type" class="form-control">
				<option value="1">Youtube</option>
				<option value="0">Vimeo</option>
			</select>
			</div>
		</div>

	    <div class="form-group" id="youshow"><label class="col-sm-2 control-label" for="url">Url</label>
	    <div class="col-sm-10 input-group m-b"><span class="input-group-addon" id="urlfield">https://youtu.be/</span><%= f.text_field :url, :required => 'required', :class => 'form-control', :placeholder => 'tsuQzTO8Rkc', :id => 'youtubefield' %></div>
	    </div>	

	   
	 	
		<div class="form-group"><label class="col-sm-2 control-label" for="video_is_active">Status</label>
		 	<div class="col-sm-10">
		 	<select name="video[is_active]" required id="video_is_active" class="form-control">
				<option value="1">Active</option>
				<option value="0">Inactive</option>
			</select>
			</div>
		</div>
	
	<div class="hr-line-dashed"></div>
  
	  <div class="form-group">
		 <div class="col-sm-4 col-sm-offset-2">
		     <button class="btn btn-primary" type="submit" name="commit" value="create" data-disable-with="Save">Save</button>
		     <%= link_to 'Back', admin_videos_path, :class=>'btn btn-white' %>
		 </div>
	  </div>
<% end %>
<script>
$(function() {
    
    $('#type').change(function(){

        if($('#type').val() == 1) {
        	//alert("youtube");
            $('#urlfield').html('https://youtu.be/'); 
            
        } else {
        	//alert("vimeo");
        	$('#urlfield').html('https://vimeo.com/'); 
            
        } 
    });
});
</script>