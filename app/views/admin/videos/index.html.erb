<p id="notice"><%= notice %></p>

<div class="row">

<div class="col-lg-12">
  <div class="ibox float-e-margins">
     <div class="ibox-title">
      <h5>Videos </h5>
      <div class="ibox-tools">
       <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
       </a> 
      </div>
     </div>
     <div class="ibox-content">
      <div class="row">
       
       <div class="col-sm-3">
        <div class="input-group"><!--<input type="text" placeholder="Search" class="input-sm form-control"><span class="input-group-btn">
        <button type="button" class="btn btn-sm btn-primary"> Go!</button> </span>!--></div>

       </div>
      </div>
      <div class="table-responsive">
       <table class="table table-striped">
        <thead>
        <tr>
            <th>Sl No</th>
            <th>Video</th>
            <th>Is Active</th>
            
        </tr>
        </thead>
        <tbody>
        <% @videos.each do |video| %>
        <tr>
            <!--<td class="client-avatar"><img alt="image" src="img/a8.jpg"> </td>!-->
            <td><%= video.id %></td>
            <td>
             <% if video.video_type == true %>
              <iframe width="200" height="100" src="https://www.youtube.com/embed/<%= video.url %>" frameborder="0" gesture="media" allowfullscreen></iframe>
             <% else %>
              <iframe src="https://player.vimeo.com/video/<%= video.url %>" width="200" height="100" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
             <% end %>
            </td>
            <td><%= video.is_active %></td>
            <td class="action">
                <%= link_to 'Edit', edit_admin_video_path(video), :class=>'btn btn-outline btn-default'%>
                <%= link_to 'Destroy', admin_video_path(video), method: :delete, data: { confirm: 'Are you sure?' },:class=>'btn btn-outline btn-default' %>
            </td>
        </tr>
        <% end %>
        </tbody>
       </table>
      </div>

     </div>
  </div>
</div>
</div>

<br>



















