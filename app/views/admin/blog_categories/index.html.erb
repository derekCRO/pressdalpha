<main class="main-content p-5" role="main">
	<div class="row">
		<div class="col-md-12">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/admin">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Blog Categories</li>
			</ol>
			<div class="row">
				<div class="col-md-6">
					<h1>
						&nbsp; Blog Categories</h1>
				</div>
				<div class="col-md-6"><%= link_to 'Add New Blog Category', new_admin_blog_category_path, data: {toggle: "modal", target: "#modal-window"}, remote: true, class: 'btn btn-success waves-effect waves-light float-right' %>
					<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
						<div class="modal-dialog" role="document">
							<div class="modal-content"></div>
						</div>
					</div>
				</div>
			</div>
			<br>
		</div>
		<div class="col-md-12">
			<div class="card">
				<div class="card-body product-page">
					<div class="tab-content" id="JobsTabContent">
						<div class="tab-pane fade show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
							<div class="table-responsive">
								<table class="table table-striped dataTables-example display nowrap" style="width:100%">
									<thead>
                  <tr>
                    <th>Name</th>
  									<th>ID</th>
  									<th>Is Active</th>
                    <th>Edit</th>
                    <th>Delete</th>
                  </tr>
									</thead>
                  <tbody>
                  <% if @blog_categories.length > 0  %>
                  <% @blog_categories.each do |blog_category| %>
                  <tr>
                    <td><%= blog_category.name %></td>
                    <td><%= blog_category.id %></td>
                    <td><%= blog_category.is_active %></td>
                    <td class="action"><%= link_to 'Edit', edit_admin_blog_category_path(blog_category), data: {toggle: "modal", target: "#modal-window"}, remote: true, :class=>'btn btn-secondary'%></td>
                    <td class="action"><%= link_to 'Destroy', admin_blog_category_path(blog_category), method: :delete, data: { confirm: 'Are you sure?' },:class=>'btn btn-danger' %></td>
                  </tr>
                  </tbody>
                  <% end %>
                  <% else %>
                  <tbody>
                    <tr>
                    </tr>
                    </tbody>
                  <% end %>
									</table>
								</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<script type="text/javascript">

			$(function () {

				$('.dataTables-example').DataTable({
					pageLength: 25,
					orderable: true,
					rowReorder: {
						selector: 'td:first-child'
					},
					responsive: true,
					dom: '<"html5buttons"B>lTfgitp',
					buttons: [
						{
							extend: 'copy'
						}, {
							extend: 'csv',
							title: 'Selected Customers'
						}, {
							extend: 'excel',
							title: 'Selected Customers'
						}, {
							extend: 'pdf',
							title: 'Selected Customers'
						}, {
							extend: 'print'
						}
					]

				});

			});
		</script>


	</main>
