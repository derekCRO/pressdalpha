<div class="page-heading">
            <h3>
               Editing Content
            </h3>
			<% @post.errors.full_messages.each do |msg| %>
			    <li class="error msg"><%= msg %></li>
		    <% end %>
</div>

<div class="wrapper">
        <div class="row">
			<div class="col-sm-12">
				<section class="panel">
					<header class="panel-heading">
						Edit Content
					</header>
					<div class="panel-body">
					
<%= form_for(@post, :url => admin_post_path, :id => @post.id) do |f| %>

    <!--<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
    </div>-->
	
	<div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
    </div>
	
	<div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
    </div>
	
    <%= f.submit %>
	<%= link_to 'Show', admin_post_path(@post), :class=>'btn btn-primary' %>
	<%= link_to 'Back', admin_posts_path, :class=>'btn btn-primary' %>
<% end %>

					</div>
				</section>
			</div>
		</div>
</div>



