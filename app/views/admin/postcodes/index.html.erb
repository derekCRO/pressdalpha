<main class="main-content p-5" role="main">
	<div class="row">
		<div class="col-md-12">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/admin">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Postcodes</li>
			</ol>
			<div class="row">
				<div class="col-md-6">
					<h1>
						&nbsp; Postcodes</h1>
				</div>
				<div class="col-md-6"><%= link_to 'Add Postcode', new_admin_postcode_path, data: {toggle: "modal", target: "#modal-window"}, remote: true, class: 'btn btn-success waves-effect waves-light float-right' %>
					<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
						<div class="modal-dialog" role="document">
							<div class="modal-content"></div>
						</div>
					</div>
				</div>
			</div>
			<br>
		</div>
		<div class="col-md-12">
			<div class="card">
				<div class="card-body product-page">
					<div class="tab-content" id="JobsTabContent">
						<div class="tab-pane fade show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
							<div class="table-responsive">
								<table class="table table-striped dataTables-example display nowrap" style="width:100%">
									<thead>
										<tr>
                      <th>ID</th>
                      <th>Postcode</th>
											<th>Edit</th>
											<th>Delete</th>
										</tr>
									</thead>
									<tbody>
										<% if @postcodes.length > 0  %>
											<% @postcodes.each do |postcode| %>
												<tr>
                        <td><%= postcode.id %></td>
                        <td><%= postcode.name %></td>
												<td><%= link_to 'Edit', edit_admin_postcode_path(postcode), data: {toggle: "modal", target: "#modal-window"}, remote: true, class: 'btn btn-success waves-effect waves-light'  %></td>
												<td><%= link_to 'Delete', admin_postcode_path(postcode), :method => :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger waves-effect waves-light'  %></td>
												</tr>
											<% end %>
										</tbody>
									<% else %>
										<tbody>
											<tr></tr>
										</tbody>
									<% end %>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<script type="text/javascript">
			$(function () {

				$('.dataTables-example').DataTable({
					pageLength: 25,
					orderable: true,
					rowReorder: {
						selector: 'td:first-child'
					},
					responsive: true,
					dom: '<"html5buttons"B>lTfgitp',
					buttons: [
						{
							extend: 'copy'
						}, {
							extend: 'csv',
							title: 'Selected Customers'
						}, {
							extend: 'excel',
							title: 'Selected Customers'
						}, {
							extend: 'pdf',
							title: 'Selected Customers'
						}, {
							extend: 'print'
						}
					]

				});

			});
		</script>

	</main>
